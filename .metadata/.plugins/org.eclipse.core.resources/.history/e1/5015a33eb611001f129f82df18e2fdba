package com.kosta.sample.json;

import java.util.ArrayList;
import java.util.HashMap;

import com.fasterxml.jackson.core.JsonProcessingException;
import com.fasterxml.jackson.databind.JsonMappingException;
import com.fasterxml.jackson.databind.ObjectMapper;

public class JsonParseTest2 {
	
	
	public static void main(String[] args) {
		
		String jsonStr = "{\r\n"
				+ "  \"name\": \"KOSTA\",\r\n"
				+ "  \"id\": \"u0001\",\r\n"
				+ "  \"displayName\": {"
				+ "\r\n"
				+ "  	\"desc\": \"this is kosta\",\r\n"
				+ "  	\"code\": \"g01\"\r\n"
				+ "  },\r\n"
				+ "  \"types\": [\"type1\",\"type2\"],\r\n"
				+ "  \"primaryType\": \"ptype\"\r\n"
				+ "}";
		

		
		//JACKSON 써서 해결해보자 -> 맵으로 연습할꺼니 해쉬맵
		ObjectMapper mapper = new ObjectMapper();
		try {
			HashMap<String, Object> map = mapper.readValue(jsonStr, HashMap.class); //누구는 String, 누구는 List니까. String, Object로써주자
			String id = (String)map.get("id");
			ArrayList<String> list = (ArrayList<String>) map.get("types");
			//System.out.println(map.get("types").getClass()); //ArrayList로출력됨
			
			HashMap<String, String> subMap = (HashMap<String, String>)map.get("displayName");
			String code = subMap.get("code");
			System.out.println(id + "," + code + "," + types);
		} catch (JsonMappingException e) {
			e.printStackTrace();
		
			
			
		
			
		//이제는 VO를 이용하여 만들자
		
		
		
		
		
		
		
		
		
		
		

		
		 	
		 
		

		
	}

}


class GmapVO {
	private String name;
	private String id;
	private String displayname;
	private String[] types;
	private String primaryType;
	
	public GmapVO() {
		
	}
	
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public String getId() {
		return id;
	}
	public void setId(String id) {
		this.id = id;
	}
	public String getDisplayname() {
		return displayname;
	}
	public void setDisplayname(String displayname) {
		this.displayname = displayname;
	}
	public String[] getTypes() {
		return types;
	}
	public void setTypes(String[] types) {
		this.types = types;
	}
	public String getPrimaryType() {
		return primaryType;
	}
	public void setPrimaryType(String primaryType) {
		this.primaryType = primaryType;
	}
	
	
	public GmapVO(String name, String id, String displayname, String[] types, String primaryType) {
		super();
		this.name = name;
		this.id = id;
		this.displayname = displayname;
		this.types = types;
		this.primaryType = primaryType;
	}
	
	
	
}
