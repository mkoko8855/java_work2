package com.kosta.lec;

public class Loop {

	public static void main(String[] args) {

		// for(초기화; 조건문; 증감문;) {할일}
		//int i = 0; //초기화 문장임
		//i<=5; //조건문 문장임
		//i = i+1; 를 깔끔하게 하면 i += 1 좀더 깔끔하게 하려면 i++;
		for(int i = 0; i<=5; i++) {
			System.out.println(i);
		}
		
		
		
		
		
		// while(조건문) {할일}
		
		
		
		
		
		
		
		// do { 할일 } while (조건문);
		
		
		
	}

}
