package com.kosta.boardtest;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.ArrayList;

import com.kosta.boardtest.*;
import com.kosta.boardtest.MyOracleConnection;


//메서드2개 -> selectBoard, deleteBoard
public class BoardDAO {

	MyOracleConnection myOracleConn = new MyOracleConnection();
	public ArrayList<BoardVO> selectBoard() {
        Connection conn = null;
        PreparedStatement pstmt = null;
        ResultSet rs = null;
        ArrayList<BoardVO> list = new ArrayList<BoardVO>();
        
        try {
            conn = myOracleConn.oracleConn();
            String sql = "SELECT * FROM board";
            pstmt = conn.prepareStatement(sql);
            rs = pstmt.executeQuery();
            
            while (rs.next()) {
                BoardVO dto = new BoardVO();
                dto.setNumber(rs.getInt("seq"));
                dto.setTitle(rs.getString("title"));
                dto.setContents(rs.getString("contents"));
                dto.setRegid(rs.getString("regid"));
                dto.setRegdate(rs.getString("regdate"));
                list.add(dto);
            }
        } catch (SQLException e) {
            e.printStackTrace();
        } finally {
            myOracleConn.oracleClose(conn, pstmt, rs);
        }
        return list;
    }

	
	

	public void createTable() {
        Connection conn = null;
        Statement stmt = null;
        try {
            conn = myOracleConn.oracleConn();
            String sql = "CREATE TABLE board7 (" +
                         "seq NUMBER PRIMARY KEY, " +
                         "title VARCHAR2(30), " +
                         "contents VARCHAR2(50), " +
                         "regid VARCHAR2(10), " +
                         "regdate date default SYSDATE)";
            stmt = conn.createStatement();
            stmt.executeUpdate(sql);
        } catch (SQLException e) {
            e.printStackTrace();
        } finally {
        	myOracleConn.oracleClose(conn, stmt);
        }
    }
	
	
	
	
	


	public int deleteBoard(int number) {
    	Connection conn = null;
        PreparedStatement pstmt = null;
        int delCount = 0;
        try {
            conn = myOracleConn.oracleConn();
            
            
            String sql = "DELETE FROM board WHERE seq = ?";
            pstmt = conn.prepareStatement(sql);
            pstmt.setInt(1, number);
            delCount = pstmt.executeUpdate();
        } catch (SQLException e) {
            e.printStackTrace();
        } finally {
        	myOracleConn.oracleClose(conn, pstmt);
        }
        return delCount;
    }
	
	
	
	
	
	public int boardInsert(){ //seq title contents regid regdate 들어가야지. seq는 nextval로. regid는 세션이나 쿠키로 바꿔야하는데 안배웠다. 날짜는 default로 sysdate로하자.
		//타이틀이랑 컨텐츠만 집어넣으면 되는데, 세션안배워서 regid까지만 집어넣자.
		int insertRows = 0;
		String sql = "insert into board values(board_seq.nextval,?,?,?,sysdate)";
		
		return insertRows;
	}
	
	
	
	
	
	public int boardUpdate(BoardVO dto){
		int updateRows = 0;
		String sql = "update board set title=?, contents=? where seq=?";
		return updateRows;
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	


}
