package com.kosta.boardtest;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.ArrayList;

import com.kosta.sample.json.EmpVO;
import com.kosta.boardtest.*;

//메서드2개 -> selectBoard, deleteBoard
public class BoardDAO {

	public ArrayList<BoardDTO> selectBoard() {	
		Connection conn = null;
		PreparedStatement pstmt  = null;
		ResultSet rs = null;
		ArrayList<BoardDTO> list = new ArrayList<BoardDTO>();

		try {
			conn = oracleConn(); 
			String sql = "select * from emp";
			pstmt = conn.prepareStatement(sql);
			rs =  pstmt.executeQuery();

			while(rs.next()) {
				EmpVO vo = new EmpVO();
				//vo.setEmpno(rs.getInt("empno"));
				//vo.setEname(rs.getString("ename"));
				
				list.add(vo);
			}
		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			oracleClose(conn, pstmt, rs);
		}
		return list;
	}
	
	
	
	public void createTable() {
        Connection conn = null;
        Statement stmt = null;
        try {
            conn = oracleConn();
            String sql = "CREATE TABLE board (" +
                         "seq NUMBER PRIMARY KEY, " +
                         "title VARCHAR2(30), " +
                         "contents VARCHAR2(50), " +
                         "regid VARCHAR2(10), " +
                         "regdate DATE DEFAULT SYSDATE)";
            stmt = conn.createStatement();
            stmt.executeUpdate(sql);
            System.out.println("1");
        } catch (SQLException e) {
            e.printStackTrace();
        } finally {
            oracleClose(conn, stmt);
        }
    }
	
	
	
	
	
	
	
	
	public static void main(String[] args) {

	}

}
