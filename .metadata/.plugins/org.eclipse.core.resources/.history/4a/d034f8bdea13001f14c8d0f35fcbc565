package com.kosta.board;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.sql.DriverManager;

import com.kosta.sample.json.EmpVO;

public class Board {


	
	private Board() {
		try {
			Class.forName("oracle.jdbc.driver.OracleDriver");
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		}
	}
	
	private static Board connection = new Board();
	
	private Board oracleConn() {
		return connection;
	}

	
	public static Board getInstance() {
		return connection; 
	}
	
	
	public Connection getConnection() throws SQLException {
		String DB_URL = "jdbc:oracle:thin:@localhost:1521:xe";
		String DB_ID = "it";
		String DB_PW = "0000";
		
		return DriverManager.getConnection(DB_URL, DB_ID, DB_PW);
	}
	
	
	

	public List<Empvo> boardSelect(Board conn) { //리턴 vo
			Connection conn = null;
			PreparedStatement pstmt = null;
			ResultSet rs = null;
			String sql = "SELECT * FROM emp";
			
			try {
				pstmt = conn.prepareStatement(sql);
				rs = pstmt.executeQuery();
				
				 ArrayList<EmpVO> list = new HashMap<EmpVO>();
				  
				  while(rs.next() == true){
				  EmpVO vo = new EmpVO();
				  	vo.setEmpno(rs.getInt("empno"));
				  	vo.setEname(rs.getString("ename"));
				  	list.add(vo);
				  }
					  	
			} catch(SQLException e) {
				e.printStackTrace();
			}
			
			
		}

	public void oracleClose() {

	}

}
