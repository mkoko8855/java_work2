package com.kosta.boardtest;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.ArrayList;

import com.kosta.sample.json.EmpVO;
import com.kosta.boardtest.*;
//import com.kosta.boardtest.MyOracleConnection;


//메서드2개 -> selectBoard, deleteBoard
public class BoardDAO {

	
	
	
	public ArrayList<BoardDTO> selectBoard() {
        Connection conn = null;
        PreparedStatement pstmt = null;
        ResultSet rs = null;
        ArrayList<BoardDTO> list = new ArrayList<>();

        try {
            conn = oracleConn();
            String sql = "SELECT * FROM board";
            pstmt = conn.prepareStatement(sql);
            rs = pstmt.executeQuery();

            while (rs.next()) {
                BoardDTO dto = new BoardDTO();
                dto.setNumber(rs.getInt("seq"));
                dto.setTitle(rs.getString("타이틀"));
                dto.setContents(rs.getString("컨텐츠"));
                dto.setRegid(rs.getString("레그아디"));
                dto.setRegdate(rs.getString("레그데이트"));
                list.add(dto);
            }
        } catch (SQLException e) {
            e.printStackTrace();
        } finally {
            oracleClose(conn, pstmt, rs);
        }
        return list;
    }

	
	
    public int deleteBoard(int number) {
        Connection conn = null;
        PreparedStatement pstmt = null;
        int delCount = 0;
        try {
            conn = oracleConn();
            String sql = "DELETE FROM board WHERE seq = ?";
            pstmt = conn.prepareStatement(sql);
            pstmt.setInt(1, number);
            delCount = pstmt.executeUpdate();
        } catch (SQLException e) {
            e.printStackTrace();
        } finally {
            oracleClose(conn, pstmt);
        }
        return delCount;
    }
	
	
	
	public void createTable() {
        Connection conn = null;
        Statement stmt = null;
        try {
            conn = oracleConn();
            String sql = "CREATE TABLE board (" +
                         "seq NUMBER PRIMARY KEY, " +
                         "title VARCHAR2(30), " +
                         "contents VARCHAR2(50), " +
                         "regid VARCHAR2(10), " +
                         "regdate date default SYSDATE)";
            stmt = conn.createStatement();
            stmt.executeUpdate(sql);
            System.out.println("1");
        } catch (SQLException e) {
            e.printStackTrace();
        } finally {
            oracleClose(conn, stmt);
        }
    }
	
	
	
	
	
	
	
	
	public static void main(String[] args) {

	}

}
